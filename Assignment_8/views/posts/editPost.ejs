<%- include("../partials/head") %> 
<%- include("../partials/header") %> 

<main class="py-5">
  <div class="container">
    <h3 class="text-center font-weight-bold text-uppercase"><i class="fas fa-paragraph"></i> EDIT POST</h3>
    <hr class="border-info">
    <div class="row mt-4">
      <div class="col-lg-8 offset-lg-2">
        <form class="needs-validation" action="/blog/<%= post._id %>?_method=PATCH" method="post" novalidate>
          <div class="form-row">
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" value="<%= post.title %>" placeholder="Enter the title of the post" autocomplete="off" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
              </div>
            </div>
            <!-- col-lg-12  -->
            <div class="col-lg-6">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="author">Author</label>
                <input type="text" class="form-control" name="author" id="author" value="<%= post.author %>" placeholder="Name of the author" autocomplete="off" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
              </div>
            </div>
            <!-- col-lg-6  -->
            <div class="col-lg-6">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="img_url">Post Image URL</label>
                <input type="text" class="form-control" name="img_url" id="img_url" value="<%= post.img_url %>" placeholder="Paste the image url here" autocomplete="off" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
              </div>
            </div>
            <!-- col-lg-6  -->
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="postBody">Body</label>
                <textarea class="form-control" name="postBody" id="postBody" rows="14" placeholder="Enter the body for the post" required><%= post.postBody %></textarea>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
              </div>
            </div>
            <!-- col-lg-12  -->
            <div class="col-lg-12">
              <div class="form-group">
                <label class="small text-info font-weight-bold" for="postSummary">Summary</label>
                <textarea class="form-control" name="postSummary" id="postSummary" rows="3" placeholder="Write the summary in around 25 words (150 characters allowed)" maxlength="150" required><%= post.postSummary %></textarea>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">This is a mandatory field, you can't leave this empty!</div>
              </div>
            </div>
            <!-- col-lg-12  -->
          </div>
          <!-- form-row  -->
          <button type="submit" class="btn btn-success">Save <i class="fas fa-check"></i></button>
          <a href="/blog/<%= post._id %>" class="btn btn-secondary">Cancel <i class="fas fa-times"></i></a>
        </form>
        <!-- form  -->
      </div>
      <!-- col-lg-8  -->
    </div>
    <!-- row  -->
  </div>
  <!-- container  -->
</main>


<script src="/js/form-validation.js"></script>

<%- include("../partials/footer") %> 